<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color, semi-transparent black -->
            <corners android:radius="1dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for disabled state, using a muted color to indicate disabled -->
            <gradient
                android:startColor="@color/mainMenuButtonStartDisabled"
                android:endColor="@color/mainMenuButtonEndDisabled"
                android:angle="270" />
            <corners android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

</layer-list>
